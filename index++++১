        ];

        // ‡¶ï‡¶æ‡¶∞‡ßá‡¶®‡ßç‡¶ü ‡¶∏‡ßç‡¶ü‡ßá‡¶ü ‡¶≠‡ßá‡¶∞‡¶ø‡¶Ø‡¶º‡ßá‡¶¨‡¶≤
        let currentUser = null;
        let currentCategory = 'all';
        let currentBannerIndex = 0;
        let hlsInstance = null;

        /* ==========================================
           ‡¶á‡¶®‡¶ø‡¶∂‡¶ø‡¶Ø‡¶º‡¶æ‡¶≤‡¶æ‡¶á‡¶ú‡ßá‡¶∂‡¶® ‡¶´‡¶æ‡¶Ç‡¶∂‡¶®
           ‡¶™‡ßá‡¶ú ‡¶≤‡ßã‡¶° ‡¶π‡¶≤‡ßá ‡¶ö‡¶æ‡¶≤‡ßÅ ‡¶π‡¶¨‡ßá
           ========================================== */
        window.addEventListener('DOMContentLoaded', function() {
            // ‡¶á‡¶®‡ßç‡¶ü‡ßç‡¶∞‡ßã ‡¶≤‡ßã‡¶°‡¶æ‡¶∞ 3 ‡¶∏‡ßá‡¶ï‡ßá‡¶®‡ßç‡¶° ‡¶™‡¶∞ ‡¶π‡¶æ‡¶á‡¶° ‡¶ï‡¶∞‡¶æ
            setTimeout(() => {
                document.getElementById('intro-loader').style.display = 'none';
            }, 3000);

            // ‡¶≤‡ßã‡¶ï‡¶æ‡¶≤ ‡¶∏‡ßç‡¶ü‡ßã‡¶∞‡ßá‡¶ú ‡¶•‡ßá‡¶ï‡ßá ‡¶≤‡¶ó‡¶á‡¶® ‡¶ö‡ßá‡¶ï ‡¶ï‡¶∞‡¶æ
            checkStoredLogin();

            // ‡¶ö‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶≤ ‡¶≤‡ßã‡¶° ‡¶ï‡¶∞‡¶æ
            loadChannels();

            // ‡¶¨‡ßç‡¶Ø‡¶æ‡¶®‡¶æ‡¶∞ ‡¶Ö‡¶ü‡ßã ‡¶∏‡ßç‡¶≤‡¶æ‡¶á‡¶° ‡¶∂‡ßÅ‡¶∞‡ßÅ ‡¶ï‡¶∞‡¶æ
            startBannerSlider();

            // ‡¶∏‡ßç‡¶ï‡ßç‡¶∞‡¶ø‡¶™‡ßç‡¶ü ‡¶™‡ßç‡¶∞‡ßã‡¶ü‡ßá‡¶ï‡¶∂‡¶® ‡¶è‡¶ï‡ßç‡¶ü‡¶ø‡¶≠ ‡¶ï‡¶∞‡¶æ
            enableScriptProtection();
        });

        /* ==========================================
           ‡¶≤‡¶ó‡¶á‡¶® ‡¶∏‡¶ø‡¶∏‡ßç‡¶ü‡ßá‡¶Æ
           ========================================== */
        
        // ‡¶≤‡¶ó‡¶á‡¶® ‡¶Æ‡¶°‡¶æ‡¶≤ ‡¶¶‡ßá‡¶ñ‡¶æ‡¶®‡ßã
        function showLogin() {
            document.getElementById('loginModal').classList.add('active');
        }

        // ‡¶≤‡¶ó‡¶á‡¶® ‡¶Æ‡¶°‡¶æ‡¶≤ ‡¶¨‡¶®‡ßç‡¶ß ‡¶ï‡¶∞‡¶æ
        function closeLogin() {
            document.getElementById('loginModal').classList.remove('active');
            document.getElementById('loginError').classList.remove('show');
        }

        // ‡¶≤‡¶ó‡¶á‡¶® ‡¶π‡ßç‡¶Ø‡¶æ‡¶®‡ßç‡¶°‡ßá‡¶≤ ‡¶ï‡¶∞‡¶æ
        function handleLogin(event) {
            event.preventDefault();
            
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value.trim();
            const errorDiv = document.getElementById('loginError');

            // ‡¶è‡¶ï‡¶æ‡¶â‡¶®‡ßç‡¶ü ‡¶ö‡ßá‡¶ï ‡¶ï‡¶∞‡¶æ
            const account = ACCOUNTS[username];

            if (!account) {
                showError('Invalid username!');
                return;
            }

            if (account.password !== password) {
                showError('Incorrect password!');
                return;
            }

            // ‡¶è‡¶ï‡ßç‡¶∏‡¶™‡¶æ‡¶Ø‡¶º‡¶æ‡¶∞‡¶ø ‡¶ö‡ßá‡¶ï ‡¶ï‡¶∞‡¶æ
            if (isAccountExpired(account.expiryDate)) {
                showError('Account expired! Please renew your subscription.');
                return;
            }

            // ‡¶≤‡¶ó‡¶á‡¶® ‡¶∏‡¶´‡¶≤
            currentUser = {
                username: username,
                ...account
            };

            // ‡¶≤‡ßã‡¶ï‡¶æ‡¶≤ ‡¶∏‡ßç‡¶ü‡ßã‡¶∞‡ßá‡¶ú‡ßá ‡¶∏‡ßá‡¶≠ ‡¶ï‡¶∞‡¶æ
            localStorage.setItem('liveStreamUser', JSON.stringify(currentUser));
            localStorage.setItem('loginTime', new Date().toISOString());

            // UI ‡¶Ü‡¶™‡¶°‡ßá‡¶ü ‡¶ï‡¶∞‡¶æ
            updateAuthUI();
            closeLogin();

            // ‡¶ö‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶≤ ‡¶∞‡¶ø‡¶≤‡ßã‡¶° ‡¶ï‡¶∞‡¶æ (‡¶™‡¶æ‡¶∞‡¶Æ‡¶ø‡¶∂‡¶® ‡¶Ö‡¶®‡ßÅ‡¶Ø‡¶æ‡¶Ø‡¶º‡ßÄ)
            loadChannels();

            // ‡¶∏‡¶æ‡¶ï‡¶∏‡ßá‡¶∏ ‡¶Æ‡ßá‡¶∏‡ßá‡¶ú ‡¶¶‡ßá‡¶ñ‡¶æ‡¶®‡ßã
            showNotification('Login successful! Welcome ' + currentUser.name);
        }

        // ‡¶è‡¶∞‡¶∞ ‡¶¶‡ßá‡¶ñ‡¶æ‡¶®‡ßã
        function showError(message) {
            const errorDiv = document.getElementById('loginError');
            errorDiv.textContent = message;
            errorDiv.classList.add('show');

            setTimeout(() => {
                errorDiv.classList.remove('show');
            }, 3000);
        }

        // ‡¶®‡ßã‡¶ü‡¶ø‡¶´‡¶ø‡¶ï‡ßá‡¶∂‡¶® ‡¶¶‡ßá‡¶ñ‡¶æ‡¶®‡ßã
        function showNotification(message) {
            alert(message); // ‡¶Ü‡¶™‡¶®‡¶ø ‡¶è‡¶ü‡¶ø ‡¶ï‡¶æ‡¶∏‡ßç‡¶ü‡¶Æ ‡¶®‡ßã‡¶ü‡¶ø‡¶´‡¶ø‡¶ï‡ßá‡¶∂‡¶® ‡¶¶‡¶ø‡¶Ø‡¶º‡ßá ‡¶∞‡¶ø‡¶™‡ßç‡¶≤‡ßá‡¶∏ ‡¶ï‡¶∞‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡ßá‡¶®
        }

        // ‡¶è‡¶ï‡¶æ‡¶â‡¶®‡ßç‡¶ü ‡¶è‡¶ï‡ßç‡¶∏‡¶™‡¶æ‡¶Ø‡¶º‡¶æ‡¶∞ ‡¶ö‡ßá‡¶ï ‡¶ï‡¶∞‡¶æ
        function isAccountExpired(expiryDate) {
            const expiry = new Date(expiryDate);
            const today = new Date();
            return today > expiry;
        }

        // ‡¶∏‡ßç‡¶ü‡ßã‡¶∞‡ßá‡¶ú ‡¶•‡ßá‡¶ï‡ßá ‡¶≤‡¶ó‡¶á‡¶® ‡¶ö‡ßá‡¶ï ‡¶ï‡¶∞‡¶æ
        function checkStoredLogin() {
            const storedUser = localStorage.getItem('liveStreamUser');
            if (storedUser) {
                currentUser = JSON.parse(storedUser);
                
                // ‡¶è‡¶ï‡ßç‡¶∏‡¶™‡¶æ‡¶Ø‡¶º‡¶æ‡¶∞‡¶ø ‡¶ö‡ßá‡¶ï ‡¶ï‡¶∞‡¶æ
                if (isAccountExpired(currentUser.expiryDate)) {
                    logout();
                    showError('Your account has expired!');
                    return;
                }
                
                updateAuthUI();
            }
        }

        // ‡¶≤‡¶ó‡¶Ü‡¶â‡¶ü ‡¶ï‡¶∞‡¶æ
        function logout() {
            currentUser = null;
            localStorage.removeItem('liveStreamUser');
            localStorage.removeItem('loginTime');
            updateAuthUI();
            loadChannels(); // ‡¶ö‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶≤ ‡¶∞‡¶ø‡¶≤‡ßã‡¶° ‡¶ï‡¶∞‡¶æ
            showNotification('Logged out successfully!');
        }

        // ‡¶Ö‡¶• UI ‡¶Ü‡¶™‡¶°‡ßá‡¶ü ‡¶ï‡¶∞‡¶æ
        function updateAuthUI() {
            const authButton = document.getElementById('authButton');
            
            if (currentUser) {
                // ‡¶™‡ßç‡¶∞‡ßã‡¶´‡¶æ‡¶á‡¶≤ ‡¶¨‡¶æ‡¶ü‡¶® ‡¶§‡ßà‡¶∞‡¶ø ‡¶ï‡¶∞‡¶æ
                authButton.innerHTML = `
                    <div class="profile-btn">
                        <div class="profile-avatar" onclick="toggleProfile()">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="profile-dropdown" id="profileDropdown">
                            <div class="profile-info">
                                <h3>${currentUser.name}</h3>
                                <p>${currentUser.email}</p>
                                <span class="account-badge badge-${currentUser.type}">
                                    ${currentUser.type === 'basic' ? 'Basic (B)' : currentUser.type === 'pro' ? 'Pro' : 'Ultra Pro+'}
                                </span>
                            </div>
                            <div class="profile-stats">
                                <div class="stat-item">
                                    <strong>${getWatchTime()}</strong>
                                    <span>Watch Time</span>
                                </div>
                                <div class="stat-item">
                                    <strong>${getDaysLeft()}</strong>
                                    <span>Days Left</span>
                                </div>
                            </div>
                            <button class="logout-btn" onclick="logout()">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </div>
                    </div>
                `;
            } else {
                // ‡¶≤‡¶ó‡¶á‡¶® ‡¶¨‡¶æ‡¶ü‡¶® ‡¶¶‡ßá‡¶ñ‡¶æ‡¶®‡ßã
                authButton.innerHTML = `
                    <a href="#" onclick="showLogin(); return false;">
                        <i class="fas fa-sign-in-alt"></i> Sign In
                    </a>
                `;
            }
        }

        // ‡¶™‡ßç‡¶∞‡ßã‡¶´‡¶æ‡¶á‡¶≤ ‡¶ü‡¶ó‡¶≤ ‡¶ï‡¶∞‡¶æ
        function toggleProfile() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('active');
        }

        // ‡¶ì‡¶Ø‡¶º‡¶æ‡¶ö ‡¶ü‡¶æ‡¶á‡¶Æ ‡¶π‡¶ø‡¶∏‡¶æ‡¶¨ ‡¶ï‡¶∞‡¶æ
        function getWatchTime() {
            const loginTime = localStorage.getItem('loginTime');
            if (!loginTime) return '0h';
            
            const start = new Date(loginTime);
            const now = new Date();
            const hours = Math.floor((now - start) / (1000 * 60 * 60));
            return hours + 'h';
        }

        // ‡¶Ö‡¶¨‡¶∂‡¶ø‡¶∑‡ßç‡¶ü ‡¶¶‡¶ø‡¶® ‡¶π‡¶ø‡¶∏‡¶æ‡¶¨ ‡¶ï‡¶∞‡¶æ
        function getDaysLeft() {
            if (!currentUser) return '0';
            
            const expiry = new Date(currentUser.expiryDate);
            const today = new Date();
            const days = Math.ceil((expiry - today) / (1000 * 60 * 60 * 24));
            return days > 0 ? days : 0;
        }

        /* ==========================================
           ‡¶ö‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶≤ ‡¶Æ‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶ú‡¶Æ‡ßá‡¶®‡ßç‡¶ü
           ========================================== */
        
        // ‡¶ö‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶≤ ‡¶≤‡ßã‡¶° ‡¶ï‡¶∞‡¶æ
        function loadChannels() {
            const grid = document.getElementById('channelsGrid');
            grid.innerHTML = '';

            let filteredChannels = CHANNELS;

            // ‡¶ï‡ßç‡¶Ø‡¶æ‡¶ü‡¶æ‡¶ó‡¶∞‡¶ø ‡¶´‡¶ø‡¶≤‡ßç‡¶ü‡¶æ‡¶∞ ‡¶ï‡¶∞‡¶æ
            if (currentCategory !== 'all') {
                filteredChannels = CHANNELS.filter(ch => ch.category === currentCategory);
            }

            // ‡¶™‡¶æ‡¶∞‡¶Æ‡¶ø‡¶∂‡¶® ‡¶´‡¶ø‡¶≤‡ßç‡¶ü‡¶æ‡¶∞ ‡¶ï‡¶∞‡¶æ (‡¶≤‡¶ó‡¶á‡¶® ‡¶®‡¶æ ‡¶•‡¶æ‡¶ï‡¶≤‡ßá ‡¶∂‡ßÅ‡¶ß‡ßÅ Free)
            filteredChannels.forEach(channel => {
                if (canAccessChannel(channel)) {
                    grid.appendChild(createChannelCard(channel));
                }
            });

            if (grid.children.length === 0) {
                grid.innerHTML = '<p style="grid-column: 1/-1; text-align: center; padding: 3rem; color: var(--text-secondary);">No channels available. Please upgrade your account.</p>';
            }
        }

        // ‡¶ö‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶≤ ‡¶è‡¶ï‡ßç‡¶∏‡ßá‡¶∏ ‡¶ö‡ßá‡¶ï ‡¶ï‡¶∞‡¶æ
        function canAccessChannel(channel) {
            // Free ‡¶ö‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶≤ ‡¶∏‡¶¨‡¶æ‡¶á ‡¶¶‡ßá‡¶ñ‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá
            if (channel.badges.includes('Free')) {
                return true;
            }

            // ‡¶≤‡¶ó‡¶á‡¶® ‡¶®‡¶æ ‡¶•‡¶æ‡¶ï‡¶≤‡ßá ‡¶∂‡ßÅ‡¶ß‡ßÅ Free
            if (!currentUser) {
                return false;
            }

            // ‡¶á‡¶â‡¶ú‡¶æ‡¶∞‡ßá‡¶∞ ‡¶™‡¶æ‡¶∞‡¶Æ‡¶ø‡¶∂‡¶® ‡¶ö‡ßá‡¶ï ‡¶ï‡¶∞‡¶æ
            return channel.badges.some(badge => 
                currentUser.allowedChannels.includes(badge)
            );
        }

        // ‡¶ö‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶≤ ‡¶ï‡¶æ‡¶∞‡ßç‡¶° ‡¶§‡ßà‡¶∞‡¶ø ‡¶ï‡¶∞‡¶æ
        function createChannelCard(channel) {
            const card = document.createElement('div');
            card.className = 'channel-card';
            card.onclick = () => playChannel(channel);

            const badges = channel.badges.map(badge => {
                const badgeClass = badge.toLowerCase().replace('+', 'plus').replace(/\d+k/, match => match.toLowerCase());
                return `<span class="badge badge-${badgeClass}">${badge}</span>`;
            }).join('');

            card.innerHTML = `
                <img src="${channel.logo}" alt="${channel.name}" class="channel-logo" onerror="this.src='https://via.placeholder.com/200x120/6366f1/ffffff?text=${encodeURIComponent(channel.name)}'">
                <div class="channel-name">${channel.name}</div>
                <div class="channel-badges">${badges}</div>
            `;

            return card;
        }

        // ‡¶ï‡ßç‡¶Ø‡¶æ‡¶ü‡¶æ‡¶ó‡¶∞‡¶ø ‡¶´‡¶ø‡¶≤‡ßç‡¶ü‡¶æ‡¶∞ ‡¶ï‡¶∞‡¶æ
        function filterChannels(category) {
            currentCategory = category;
            
            // ‡¶ü‡ßç‡¶Ø‡¶æ‡¶¨ ‡¶Ü‡¶™‡¶°‡ßá‡¶ü ‡¶ï‡¶∞‡¶æ
            document.querySelectorAll('.category-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            event.target.classList.add('active');
            
            loadChannels();
        }

        /* ==========================================
           ‡¶≠‡¶ø‡¶°‡¶ø‡¶ì ‡¶™‡ßç‡¶≤‡ßá‡¶Ø‡¶º‡¶æ‡¶∞
           ========================================== */
        
        // ‡¶ö‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶≤ ‡¶™‡ßç‡¶≤‡ßá ‡¶ï‡¶∞‡¶æ
        function playChannel(channel) {
            const modal = document.getElementById('playerModal');
            const video = document.getElementById('videoPlayer');
            const title = document.getElementById('playerTitle');

            // ‡¶ü‡¶æ‡¶á‡¶ü‡ßá‡¶≤ ‡¶∏‡ßá‡¶ü ‡¶ï‡¶∞‡¶æ
            title.innerHTML = `<i class="fas fa-play-circle"></i> ${channel.name}`;

            // ‡¶Æ‡¶°‡¶æ‡¶≤ ‡¶¶‡ßá‡¶ñ‡¶æ‡¶®‡ßã
            modal.classList.add('active');

            // HLS ‡¶™‡ßç‡¶≤‡ßá‡¶Ø‡¶º‡¶æ‡¶∞ ‡¶∏‡ßá‡¶ü‡¶Ü‡¶™ ‡¶ï‡¶∞‡¶æ
            if (Hls.isSupported()) {
                if (hlsInstance) {
                    hlsInstance.destroy();
                }

                hlsInstance = new Hls({
                    enableWorker: true,
                    lowLatencyMode: true,
                    backBufferLength: 90
                });

                hlsInstance.loadSource(channel.url);
                hlsInstance.attachMedia(video);

                hlsInstance.on(Hls.Events.MANIFEST_PARSED, function() {
                    video.play().catch(e => console.log('Auto-play prevented:', e));
                });

                hlsInstance.on(Hls.Events.ERROR, function(event, data) {
                    if (data.fatal) {
                        console.error('HLS Error:', data);
                        alert('Error loading stream. Please try again.');
                    }
                });

            } else if (video.canPlayType('application/vnd.apple.mpegurl')) {
                // iOS Safari ‡¶∏‡¶æ‡¶™‡ßã‡¶∞‡ßç‡¶ü
                video.src = channel.url;
                video.addEventListener('loadedmetadata', function() {
                    video.play();
                });
            } else {
                alert('Your browser does not support HLS streaming.');
            }
        }

        // ‡¶™‡ßç‡¶≤‡ßá‡¶Ø‡¶º‡¶æ‡¶∞ ‡¶¨‡¶®‡ßç‡¶ß ‡¶ï‡¶∞‡¶æ
        function closePlayer() {
            const modal = document.getElementById('playerModal');
            const video = document.getElementById('videoPlayer');

            modal.classList.remove('active');
            video.pause();

            if (hlsInstance) {
                hlsInstance.destroy();
                hlsInstance = null;
            }
        }

        // PIP (Picture-in-Picture) ‡¶ü‡¶ó‡¶≤ ‡¶ï‡¶∞‡¶æ
        function togglePIP() {
            const video = document.getElementById('videoPlayer');
            
            if (document.pictureInPictureElement) {
                document.exitPictureInPicture();
            } else {
                video.requestPictureInPicture().catch(err => {
                    console.error('PIP Error:', err);
                    alert('Picture-in-Picture not supported');
                });
            }
        }

        // ‡¶´‡ßÅ‡¶≤‡¶∏‡ßç‡¶ï‡ßç‡¶∞‡¶ø‡¶® ‡¶ü‡¶ó‡¶≤ ‡¶ï‡¶∞‡¶æ
        function toggleFullscreen() {
            const container = document.querySelector('.player-container');
            
            if (!document.fullscreenElement) {
                container.requestFullscreen().catch(err => {
                    console.error('Fullscreen Error:', err);
                });
            } else {
                document.exitFullscreen();
            }
        }

        // ‡¶ï‡ßã‡¶Ø‡¶º‡¶æ‡¶≤‡¶ø‡¶ü‡¶ø ‡¶∏‡¶ø‡¶≤‡ßá‡¶ï‡ßç‡¶ü‡¶∞ ‡¶ü‡¶ó‡¶≤ ‡¶ï‡¶∞‡¶æ
        function toggleQuality() {
            const dropdown = document.getElementById('qualityDropdown');
            dropdown.classList.toggle('active');
        }

        // ‡¶ï‡ßã‡¶Ø‡¶º‡¶æ‡¶≤‡¶ø‡¶ü‡¶ø ‡¶™‡¶∞‡¶ø‡¶¨‡¶∞‡ßç‡¶§‡¶® ‡¶ï‡¶∞‡¶æ
        function changeQuality(quality) {
            console.log('Quality changed to:', quality);
            toggleQuality();
            // HLS ‡¶≤‡ßá‡¶≠‡ßá‡¶≤ ‡¶™‡¶∞‡¶ø‡¶¨‡¶∞‡ßç‡¶§‡¶® ‡¶ï‡¶∞‡¶æ‡¶∞ ‡¶ï‡ßã‡¶° ‡¶è‡¶ñ‡¶æ‡¶®‡ßá ‡¶Ø‡ßÅ‡¶ï‡ßç‡¶§ ‡¶ï‡¶∞‡ßÅ‡¶®
        }

        // ‡¶™‡ßç‡¶≤‡ßá‡¶Ø‡¶º‡¶æ‡¶∞ ‡¶∞‡¶ø‡¶≤‡ßã‡¶° ‡¶ï‡¶∞‡¶æ
        function reloadPlayer() {
            const video = document.getElementById('videoPlayer');
            video.load();
            video.play();
        }

        /* ==========================================
           ‡¶¨‡ßç‡¶Ø‡¶æ‡¶®‡¶æ‡¶∞ ‡¶∏‡ßç‡¶≤‡¶æ‡¶á‡¶°‡¶æ‡¶∞
           ========================================== */
        
        // ‡¶¨‡ßç‡¶Ø‡¶æ‡¶®‡¶æ‡¶∞ ‡¶Ö‡¶ü‡ßã ‡¶∏‡ßç‡¶≤‡¶æ‡¶á‡¶° ‡¶∂‡ßÅ‡¶∞‡ßÅ ‡¶ï‡¶∞‡¶æ
        function startBannerSlider() {
            setInterval(() => {
                currentBannerIndex = (currentBannerIndex + 1) % 3;
                changeBanner(currentBannerIndex);
            }, 5000); // ‡¶™‡ßç‡¶∞‡¶§‡¶ø 5 ‡¶∏‡ßá‡¶ï‡ßá‡¶®‡ßç‡¶°‡ßá ‡¶∏‡ßç‡¶≤‡¶æ‡¶á‡¶°
        }

        // ‡¶¨‡ßç‡¶Ø‡¶æ‡¶®‡¶æ‡¶∞ ‡¶™‡¶∞‡¶ø‡¶¨‡¶∞‡ßç‡¶§‡¶® ‡¶ï‡¶∞‡¶æ
        function changeBanner(index) {
            const slides = document.querySelectorAll('.banner-slide');
            const dots = document.querySelectorAll('.banner-dot');

            slides.forEach((slide, i) => {
                slide.classList.toggle('active', i === index);
            });

            dots.forEach((dot, i) => {
                dot.classList.toggle('active', i === index);
            });

            currentBannerIndex = index;
        }

        /* ==========================================
           ‡¶Æ‡ßã‡¶¨‡¶æ‡¶á‡¶≤ ‡¶Æ‡ßá‡¶®‡ßÅ
           ========================================== */
        
        function toggleMobileMenu() {
            const navLinks = document.getElementById('navLinks');
            navLinks.classList.toggle('active');
        }

        /* ==========================================
           ‡¶∏‡ßç‡¶ï‡ßç‡¶∞‡¶ø‡¶™‡ßç‡¶ü ‡¶™‡ßç‡¶∞‡ßã‡¶ü‡ßá‡¶ï‡¶∂‡¶®
           ========================================== */
        
        function enableScriptProtection() {
            // ‡¶∞‡¶æ‡¶á‡¶ü ‡¶ï‡ßç‡¶≤‡¶ø‡¶ï ‡¶°‡¶ø‡¶ú‡ßá‡¶¨‡¶≤
            document.addEventListener('contextmenu', e => e.preventDefault());

            // Ctrl+U (View Source) ‡¶°‡¶ø‡¶ú‡ßá‡¶¨‡¶≤
            document.addEventListener('keydown', e => {
                if (e.ctrlKey && (e.key === 'u' || e.key === 'U')) {
                    e.preventDefault();
                }
                // F12 (DevTools) ‡¶°‡¶ø‡¶ú‡ßá‡¶¨‡¶≤
                if (e.key === 'F12') {
                    e.preventDefault();
                }
                // Ctrl+Shift+I (DevTools) ‡¶°‡¶ø‡¶ú‡ßá‡¶¨‡¶≤
                if (e.ctrlKey && e.shiftKey && e.key === 'I') {
                    e.preventDefault();
                }
            });

            // ‡¶ï‡¶®‡¶∏‡ßã‡¶≤ ‡¶ì‡¶Ø‡¶º‡¶æ‡¶∞‡ßç‡¶®‡¶ø‡¶Ç
            console.log('%cSTOP!', 'color: red; font-size: 50px; font-weight: bold;');
            console.log('%cThis is a browser feature intended for developers.', 'font-size: 20px;');
            console.log('%cUnauthorized access is prohibited.', 'font-size: 20px; color: red;');
        }

        /* ==========================================
           ‡¶á‡¶â‡¶ü‡¶ø‡¶≤‡¶ø‡¶ü‡¶ø ‡¶´‡¶æ‡¶Ç‡¶∂‡¶®
           ========================================== */
        
        // ‡¶∏‡ßç‡¶Æ‡ßÅ‡¶• ‡¶∏‡ßç‡¶ï‡ßç‡¶∞‡¶≤
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // ‡¶ï‡ßç‡¶≤‡¶ø‡¶ï ‡¶Ü‡¶â‡¶ü‡¶∏‡¶æ‡¶á‡¶° - ‡¶™‡ßç‡¶∞‡ßã‡¶´‡¶æ‡¶á‡¶≤ ‡¶°‡ßç‡¶∞‡¶™‡¶°‡¶æ‡¶â‡¶® ‡¶¨‡¶®‡ßç‡¶ß ‡¶ï‡¶∞‡¶æ
        document.addEventListener('click', function(e) {
            const profileBtn = document.querySelector('.profile-btn');
            const profileDropdown = document.getElementById('profileDropdown');
            
            if (profileDropdown && !profileBtn?.contains(e.target)) {
                profileDropdown.classList.remove('active');
            }

            const qualitySelector = document.querySelector('.quality-selector');
            const qualityDropdown = document.getElementById('qualityDropdown');
            
            if (qualityDropdown && !qualitySelector?.contains(e.target)) {
                qualityDropdown.classList.remove('active');
            }
        });

        // ‡¶ï‡ßÄ‡¶¨‡ßã‡¶∞‡ßç‡¶° ‡¶∂‡¶∞‡ßç‡¶ü‡¶ï‡¶æ‡¶ü
        document.addEventListener('keydown', function(e) {
            const modal = document.getElementById('playerModal');
            
            if (modal.classList.contains('active')) {
                const video = document.getElementById('videoPlayer');
                
                // Space - Play/Pause
                if (e.code === 'Space') {
                    e.preventDefault();
                    video.paused ? video.play() : video.pause();
                }
                
                // F - Fullscreen
                if (e.code === 'KeyF') {
                    e.preventDefault();
                    toggleFullscreen();
                }
                
                // Escape - Close Player
                if (e.code === 'Escape') {
                    closePlayer();
                }
                
                // Arrow Up - Volume Up
                if (e.code === 'ArrowUp') {
                    e.preventDefault();
                    video.volume = Math.min(video.volume + 0.1, 1);
                }
                
                // Arrow Down - Volume Down
                if (e.code === 'ArrowDown') {
                    e.preventDefault();
                    video.volume = Math.max(video.volume - 0.1, 0);
                }
            }
        });

    </script>
</body>
</html>

