        /* ==========================================
           ‡¶ó‡ßç‡¶≤‡ßã‡¶¨‡¶æ‡¶≤ ‡¶≠‡ßá‡¶∞‡¶ø‡¶Ø‡¶º‡ßá‡¶¨‡¶≤
           ========================================== */
        let currentUser = null;
        let currentCategory = 'all';
        let bannerInterval = null;
        let currentBannerIndex = 0;
        let hls = null;

        /* ==========================================
           ‡¶á‡¶®‡ßç‡¶ü‡ßç‡¶∞‡ßã ‡¶∏‡ßç‡¶ï‡ßç‡¶∞‡¶ø‡¶® ‡¶π‡ßç‡¶Ø‡¶æ‡¶®‡ßç‡¶°‡¶≤‡¶ø‡¶Ç
           3.5 ‡¶∏‡ßá‡¶ï‡ßá‡¶®‡ßç‡¶° ‡¶™‡¶∞ ‡¶´‡ßá‡¶° ‡¶Ü‡¶â‡¶ü
           ========================================== */
        window.addEventListener('load', () => {
            setTimeout(() => {
                const introScreen = document.getElementById('introScreen');
                introScreen.classList.add('fade-out');
                
                setTimeout(() => {
                    introScreen.style.display = 'none';
                }, 1000);
            }, 3500);
        });

        /* ==========================================
           ‡¶∏‡ßç‡¶ï‡ßç‡¶∞‡¶≤ ‡¶á‡¶´‡ßá‡¶ï‡ßç‡¶ü - ‡¶®‡ßá‡¶≠‡¶¨‡¶æ‡¶∞
           ========================================== */
        let lastScroll = 0;
        window.addEventListener('scroll', () => {
            const navbar = document.getElementById('navbar');
            const currentScroll = window.pageYOffset;

            if (currentScroll > 100) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }

            lastScroll = currentScroll;
        });

        /* ==========================================
           ‡¶Æ‡ßã‡¶¨‡¶æ‡¶á‡¶≤ ‡¶Æ‡ßá‡¶®‡ßÅ ‡¶ü‡¶ó‡¶≤
           ========================================== */
        function toggleMenu() {
            const navLinks = document.getElementById('navLinks');
            navLinks.classList.toggle('active');
        }

        /* ==========================================
           ‡¶∏‡ßç‡¶Æ‡ßÅ‡¶• ‡¶∏‡ßç‡¶ï‡ßç‡¶∞‡¶≤ ‡¶ü‡ßÅ ‡¶∏‡ßá‡¶ï‡¶∂‡¶®
           ========================================== */
        function scrollToSection(sectionId) {
            const element = document.getElementById(sectionId);
            if (element) {
                element.scrollIntoView({ 
                    behavior: 'smooth',
                    block: 'start'
                });
                document.getElementById('navLinks').classList.remove('active');
            }
        }

        /* ==========================================
           ‡¶¨‡ßç‡¶Ø‡¶æ‡¶®‡¶æ‡¶∞ ‡¶∏‡ßç‡¶≤‡¶æ‡¶á‡¶°‡¶æ‡¶∞ ‡¶á‡¶®‡¶ø‡¶∂‡¶ø‡¶Ø‡¶º‡¶æ‡¶≤‡¶æ‡¶á‡¶ú
           ========================================== */
        function initBanner() {
            const slides = document.querySelectorAll('.banner-slide');
            const dotsContainer = document.getElementById('bannerDots');

            slides.forEach((_, index) => {
                const dot = document.createElement('div');
                dot.className = `banner-dot ${index === 0 ? 'active' : ''}`;
                dot.onclick = () => goToBanner(index);
                dotsContainer.appendChild(dot);
            });

            bannerInterval = setInterval(() => {
                changeBanner(1);
            }, 5000);
        }

        function updateBanner() {
            const slides = document.querySelectorAll('.banner-slide');
            const dots = document.querySelectorAll('.banner-dot');

            slides.forEach((slide, index) => {
                slide.classList.toggle('active', index === currentBannerIndex);
            });

            dots.forEach((dot, index) => {
                dot.classList.toggle('active', index === currentBannerIndex);
            });
        }

        function changeBanner(direction) {
            const slides = document.querySelectorAll('.banner-slide');
            currentBannerIndex = (currentBannerIndex + direction + slides.length) % slides.length;
            updateBanner();
            resetBannerInterval();
        }

        function goToBanner(index) {
            currentBannerIndex = index;
            updateBanner();
            resetBannerInterval();
        }

        function resetBannerInterval() {
            clearInterval(bannerInterval);
            bannerInterval = setInterval(() => {
                changeBanner(1);
            }, 5000);
        }

        /* ==========================================
           ‡¶á‡¶≠‡ßá‡¶®‡ßç‡¶ü ‡¶∞‡ßá‡¶®‡ßç‡¶°‡¶æ‡¶∞‡¶ø‡¶Ç
           ‡¶∂‡ßÅ‡¶ß‡ßÅ ‡¶ö‡¶≤‡¶Æ‡¶æ‡¶® ‡¶á‡¶≠‡ßá‡¶®‡ßç‡¶ü ‡¶¶‡ßá‡¶ñ‡¶æ‡¶Ø‡¶º
           ========================================== */
        function renderEvents() {
            const eventsGrid = document.getElementById('eventsGrid');
            const now = new Date();

            const activeEvents = liveEvents.filter(event => {
                const start = new Date(event.startTime);
                const end = new Date(event.endTime);
                return now >= start && now <= end;
            });

            if (activeEvents.length === 0) {
                eventsGrid.innerHTML = `
                    <div style="grid-column: 1/-1; text-align: center; padding: 4rem;">
                        <i class="fas fa-calendar-times" style="font-size: 5rem; opacity: 0.2; margin-bottom: 1.5rem;"></i>
                        <p style="opacity: 0.6; font-size: 1.2rem;">No live events at the moment</p>
                    </div>
                `;
                return;
            }

            eventsGrid.innerHTML = activeEvents.map(event => `
                <div class="event-card" onclick='playChannel(${JSON.stringify(event.channelUrl)}, "${event.title}", "m3u8")'>
                    <img src="${event.image}" alt="${event.title}" class="event-image" loading="lazy">
                    <div class="event-content">
                        <div class="event-title">${event.title}</div>
                        <div class="event-time">
                            <i class="fas fa-clock"></i>
                            ${new Date(event.startTime).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' })}
                        </div>
                        <span class="event-status">
                            <i class="fas fa-circle" style="font-size: 0.6rem;"></i> LIVE NOW
                        </span>
                    </div>
                </div>
            `).join('');
        }

        /* ==========================================
           ‡¶ö‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶≤ ‡¶∞‡ßá‡¶®‡ßç‡¶°‡¶æ‡¶∞‡¶ø‡¶Ç
           ‡¶´‡¶ø‡¶≤‡ßç‡¶ü‡¶æ‡¶∞ ‡¶è‡¶¨‡¶Ç ‡¶™‡¶æ‡¶∞‡¶Æ‡¶ø‡¶∂‡¶® ‡¶ö‡ßá‡¶ï ‡¶∏‡¶π
           ========================================== */
        function renderChannels() {
            const channelsGrid = document.getElementById('channelsGrid');
            
            let filteredChannels = channels;

            if (currentCategory !== 'all') {
                filteredChannels = channels.filter(ch => ch.category === currentCategory);
            }

            if (currentUser) {
                const userPlan = authorizedAccounts[currentUser].allowedCategories;
                if (userPlan !== 'all') {
                    filteredChannels = filteredChannels.filter(ch => 
                        userPlan.includes(ch.category)
                    );
                }
            }

            channelsGrid.innerHTML = filteredChannels.map(channel => `
                <div class="channel-card" onclick='handleChannelClick(${JSON.stringify(channel)})'>
                    <div class="channel-logo-wrapper">
                        <img src="${channel.logo}" 
                             alt="${channel.name}" 
                             class="channel-logo" 
                             loading="lazy"
                             onerror="this.src='https://via.placeholder.com/90?text=${encodeURIComponent(channel.name)}'">
                    </div>
                    <div class="channel-name">${channel.name}</div>
                    <div class="channel-badges">
                        ${channel.badges.map(badge => `
                            <span class="badge badge-${badge.toLowerCase().replace('+', '-plus')}">${badge}</span>
                        `).join('')}
                    </div>
                </div>
            `).join('');
        }

        /* ==========================================
           ‡¶ï‡ßç‡¶Ø‡¶æ‡¶ü‡¶æ‡¶ó‡¶∞‡¶ø ‡¶´‡¶ø‡¶≤‡ßç‡¶ü‡¶æ‡¶∞
           ========================================== */
        function filterChannels(category) {
            currentCategory = category;
            
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');

            renderChannels();
        }

        /* ==========================================
           ‡¶ö‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶≤ ‡¶ï‡ßç‡¶≤‡¶ø‡¶ï ‡¶π‡ßç‡¶Ø‡¶æ‡¶®‡ßç‡¶°‡¶≤‡¶æ‡¶∞
           ‡¶≤‡¶ó‡¶á‡¶® ‡¶è‡¶¨‡¶Ç ‡¶™‡ßç‡¶≤‡ßç‡¶Ø‡¶æ‡¶® ‡¶ö‡ßá‡¶ï
           ========================================== */
        function handleChannelClick(channel) {
            if (!currentUser) {
                alert('‚ö†Ô∏è Please sign in to watch channels');
                showLogin();
                return;
            }

            const userPlan = authorizedAccounts[currentUser];
            const requiredBadge = channel.badges.find(b => ['B', 'Pro', 'Pro+'].includes(b));
            
            if (requiredBadge === 'Pro' && userPlan.badge === 'B') {
                alert('‚ö†Ô∏è This channel requires Pro plan or higher');
                return;
            }

            if (requiredBadge === 'Pro+' && (userPlan.badge === 'B' || userPlan.badge === 'Pro')) {
                alert('‚ö†Ô∏è This channel requires Ultra Pro plan');
                return;
            }

            playChannel(channel.url, channel.name, channel.type);
            updateWatchHistory(channel.name);
        }

        /* ==========================================
           ‡¶≠‡¶ø‡¶°‡¶ø‡¶ì ‡¶™‡ßç‡¶≤‡ßá‡¶Ø‡¶º‡¶æ‡¶∞
           HLS.js ‡¶∏‡¶π ‡¶∏‡¶Æ‡ßç‡¶™‡ßÇ‡¶∞‡ßç‡¶£ ‡¶∏‡¶æ‡¶™‡ßã‡¶∞‡ßç‡¶ü
           ========================================== */
        function playChannel(url, name, type) {
            const playerModal = document.getElementById('playerModal');
            const videoPlayer = document.getElementById('videoPlayer');
            const channelName = document.getElementById('currentChannelName');

            playerModal.classList.add('active');
            channelName.textContent = name;

            if (hls) {
                hls.destroy();
                hls = null;
            }

            if (type === 'm3u8') {
                if (Hls.isSupported()) {
                    hls = new Hls({
                        enableWorker: true,
                        lowLatencyMode: true,
                        backBufferLength: 90,
                        maxBufferLength: 30,
                        maxMaxBufferLength: 600,
                        xhrSetup: function(xhr, url) {
                            xhr.withCredentials = false;
                        }
                    });
                    
                    hls.loadSource(url);
                    hls.attachMedia(videoPlayer);
                    
                    hls.on(Hls.Events.MANIFEST_PARSED, function() {
                        videoPlayer.play().catch(e => {
                            console.log('Autoplay prevented:', e);
                        });
                    });

                    hls.on(Hls.Events.ERROR, function(event, data) {
                        if (data.fatal) {
                            switch(data.type) {
                                case Hls.ErrorTypes.NETWORK_ERROR:
                                    hls.startLoad();
                                    break;
                                case Hls.ErrorTypes.MEDIA_ERROR:
                                    hls.recoverMediaError();
                                    break;
                                default:
                                    hls.destroy();
                                    break;
                            }
                        }
                    });
                } else if (videoPlayer.canPlayType('application/vnd.apple.mpegurl')) {
                    videoPlayer.src = url;
                    videoPlayer.addEventListener('loadedmetadata', function() {
                        videoPlayer.play();
                    });
                }
            } else {
                videoPlayer.src = url;
                videoPlayer.play();
            }

            // PIP ‡¶∏‡¶æ‡¶™‡ßã‡¶∞‡ßç‡¶ü
            if (document.pictureInPictureEnabled) {
                videoPlayer.addEventListener('dblclick', function() {
                    if (document.pictureInPictureElement) {
                        document.exitPictureInPicture();
                    } else {
                        videoPlayer.requestPictureInPicture();
                    }
                });
            }
        }

        /* ==========================================
           ‡¶™‡ßç‡¶≤‡ßá‡¶Ø‡¶º‡¶æ‡¶∞ ‡¶¨‡¶®‡ßç‡¶ß ‡¶ï‡¶∞‡¶æ
           ========================================== */
        function closePlayer() {
            const playerModal = document.getElementById('playerModal');
            const videoPlayer = document.getElementById('videoPlayer');

            playerModal.classList.remove('active');
            videoPlayer.pause();
            videoPlayer.src = '';

            if (hls) {
                hls.destroy();
                hls = null;
            }
        }

        /* ==========================================
           ‡¶≤‡¶ó‡¶á‡¶® ‡¶Æ‡¶°‡¶æ‡¶≤
           ========================================== */
        function showLogin() {
            document.getElementById('loginModal').classList.add('active');
        }

        function closeLogin() {
            document.getElementById('loginModal').classList.remove('active');
        }

        /* ==========================================
           ‡¶≤‡¶ó‡¶á‡¶® ‡¶π‡ßç‡¶Ø‡¶æ‡¶®‡ßç‡¶°‡¶≤‡¶æ‡¶∞
           ========================================== */
        function handleLogin(event) {
            event.preventDefault();

            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            if (!authorizedAccounts[username]) {
                alert('‚ùå Invalid username or password');
                return;
            }

            const account = authorizedAccounts[username];

            if (account.password !== password) {
                alert('‚ùå Invalid username or password');
                return;
            }

            const expiryDate = new Date(account.expiryDate);
            const today = new Date();

            if (today > expiryDate) {
                alert('‚ùå Your account has expired. Please renew your subscription.');
                return;
            }

            currentUser = username;
            
            localStorage.setItem('currentUser', username);
            localStorage.setItem('loginTime', new Date().toISOString());

            updateAuthUI();
            closeLogin();

            alert(`‚úÖ Welcome ${account.plan} user! Enjoy streaming.`);
        }

        /* ==========================================
           ‡¶≤‡¶ó‡¶Ü‡¶â‡¶ü
           ========================================== */
        function logout() {
            currentUser = null;
            localStorage.removeItem('currentUser');
            localStorage.removeItem('loginTime');
            
            updateAuthUI();
            renderChannels();

            alert('üëã You have been logged out successfully');
        }

        /* ==========================================
           ‡¶Ö‡¶• UI ‡¶Ü‡¶™‡¶°‡ßá‡¶ü
           ========================================== */
        function updateAuthUI() {
            const authBtn = document.getElementById('authBtn');
            const profileBtn = document.getElementById('profileBtn');

            if (currentUser) {
                const account = authorizedAccounts[currentUser];
                
                authBtn.classList.add('hidden');
                profileBtn.classList.remove('hidden');

                const firstLetter = currentUser.charAt(0).toUpperCase();
                document.getElementById('profileAvatar').textContent = firstLetter;
                document.getElementById('profileName').textContent = account.plan;
                
                document.getElementById('dropdownName').textContent = currentUser;
                document.getElementById('dropdownEmail').textContent = account.email;
                document.getElementById('dropdownPlan').textContent = `${account.plan} (${account.badge})`;

                const daysLeft = Math.ceil((new Date(account.expiryDate) - new Date()) / (1000 * 60 * 60 * 24));
                document.getElementById('daysLeft').textContent = daysLeft;

                const watchHistory = JSON.parse(localStorage.getItem('watchHistory') || '[]');
                document.getElementById('watchedChannels').textContent = watchHistory.length;

                renderChannels();
            } else {
                authBtn.classList.remove('hidden');
                profileBtn.classList.add('hidden');
            }
        }

        /* ==========================================
           ‡¶™‡ßç‡¶∞‡ßã‡¶´‡¶æ‡¶á‡¶≤ ‡¶°‡ßç‡¶∞‡¶™‡¶°‡¶æ‡¶â‡¶® ‡¶ü‡¶ó‡¶≤
           ========================================== */
        function toggleProfile() {
            const dropdown = document.getElementById('profileDropdown');
            dropdown.classList.toggle('active');
        }

        document.addEventListener('click', function(event) {
            const profileBtn = document.getElementById('profileBtn');
            const dropdown = document.getElementById('profileDropdown');
            
            if (profileBtn && !profileBtn.contains(event.target)) {
                dropdown.classList.remove('active');
            }
        });

        /* ==========================================
           ‡¶ì‡¶Ø‡¶º‡¶æ‡¶ö ‡¶π‡¶ø‡¶∏‡ßç‡¶ü‡¶∞‡¶ø
           ========================================== */
        function updateWatchHistory(channelName) {
            let history = JSON.parse(localStorage.getItem('watchHistory') || '[]');
            
            if (!history.includes(channelName)) {
                history.push(channelName);
                localStorage.setItem('watchHistory', JSON.stringify(history));
                
                if (currentUser) {
                    document.getElementById('watchedChannels').textContent = history.length;
                }
            }
        }

        /* ==========================================
           ‡¶Ö‡¶ü‡ßã ‡¶≤‡¶ó‡¶á‡¶® ‡¶ö‡ßá‡¶ï
           ========================================== */
        function checkAutoLogin() {
            const savedUser = localStorage.getItem('currentUser');
            if (savedUser && authorizedAccounts[savedUser]) {
                const account = authorizedAccounts[savedUser];
                const expiryDate = new Date(account.expiryDate);
                const today = new Date();

                if (today <= expiryDate) {
                    currentUser = savedUser;
                    updateAuthUI();
                } else {
                    localStorage.removeItem('currentUser');
                }
            }
        }

        /* ==========================================
           ‡¶™‡ßá‡¶ú ‡¶á‡¶®‡¶ø‡¶∂‡¶ø‡¶Ø‡¶º‡¶æ‡¶≤‡¶æ‡¶á‡¶ú‡ßá‡¶∂‡¶®
           ========================================== */
        document.addEventListener('DOMContentLoaded', function() {
            initBanner();
            renderEvents();
            renderChannels();
            checkAutoLogin();

            setInterval(renderEvents, 60000);

            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closePlayer();
                    closeLogin();
                    document.getElementById('navLinks').classList.remove('active');
                }
            });
        });

        /* ==========================================
           ‡¶∏‡¶ø‡¶ï‡¶ø‡¶â‡¶∞‡¶ø‡¶ü‡¶ø ‡¶™‡ßç‡¶∞‡ßã‡¶ü‡ßá‡¶ï‡¶∂‡¶®
           ========================================== */
        (function() {
            document.addEventListener('contextmenu', e => e.preventDefault());

            document.addEventListener('keydown', e => {
                if (e.keyCode == 123 || 
                    (e.ctrlKey && e.shiftKey && e.keyCode == 73) || 
                    (e.ctrlKey && e.shiftKey && e.keyCode == 74) || 
                    (e.ctrlKey && e.keyCode == 85)) {
                    e.preventDefault();
                    return false;
                }
            });

            const devtools = /./;
            devtools.toString = function() {
                this.opened = true;
            }
            
            setInterval(() => {
                if (devtools.opened) {
                    window.location.reload();
                }
                devtools.opened = false;
            }, 1000);
        })();
    </script>

    <!-- Particles.js CDN (Optional - ‡¶™‡¶æ‡¶∞‡ßç‡¶ü‡¶ø‡¶ï‡ßá‡¶≤ ‡¶¨‡ßç‡¶Ø‡¶æ‡¶ï‡¶ó‡ßç‡¶∞‡¶æ‡¶â‡¶®‡ßç‡¶°‡ßá‡¶∞ ‡¶ú‡¶®‡ßç‡¶Ø) -->
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        // ‡¶™‡¶æ‡¶∞‡ßç‡¶ü‡¶ø‡¶ï‡ßá‡¶≤ ‡¶ï‡¶®‡¶´‡¶ø‡¶ó‡¶æ‡¶∞‡ßá‡¶∂‡¶®
        if (typeof particlesJS !== 'undefined') {
            particlesJS('particles-js', {
                particles: {
                    number: { value: 80, density: { enable: true, value_area: 800 } },
                    color: { value: '#667eea' },
                    shape: { type: 'circle' },
                    opacity: { value: 0.3, random: true },
                    size: { value: 3, random: true },
                    line_linked: {
                        enable: true,
                        distance: 150,
                        color: '#667eea',
                        opacity: 0.2,
                        width: 1
                    },
                    move: {
                        enable: true,
                        speed: 2,
                        direction: 'none',
                        random: false,
                        straight: false,
                        out_mode: 'out',
                        bounce: false
                    }
                },
                interactivity: {
                    detect_on: 'canvas',
                    events: {
                        onhover: { enable: true, mode: 'repulse' },
                        onclick: { enable: true, mode: 'push' },
                        resize: true
                    }
                },
                retina_detect: true
            });
        }
    </script>
</body>
</html>

